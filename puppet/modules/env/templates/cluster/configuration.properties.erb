# Map component
map.provider=googlev3
map.apiKey=
map.tileServer.hostName=localhost
map.tileServer.port=9999

# Providers
model.provider=com.altamiracorp.bigtable.model.accumulo.AccumuloSession
graph.provider=com.altamiracorp.lumify.model.TitanGraphSession
search.provider=com.altamiracorp.lumify.search.ElasticSearchProvider
authentication.provider=<%= @authentication_provider %>
fs.provider=com.altamiracorp.lumify.fs.hdfs.HdfsSession
#work-queue-repository=com.altamiracorp.lumify.model.KafkaWorkQueueRepository
work-queue-repository=com.altamiracorp.lumify.model.bigtablequeue.BigTableWorkQueueRepository
work-queue-repository.tableprefix=atc_accumuloqueue_
content-type-extractor=com.altamiracorp.lumify.contentTypeExtraction.TikaContentTypeExtractor
object.detector=com.altamiracorp.lumify.objectDetection.OpenCVObjectDetector

# Application-wide
hadoop.url=hdfs://<%= @hadoop_masters[0] %>:8020
zookeeper.serverNames=<%= @zookeeper_nodes.values.collect {|node| node.split(':')[0]}.join(',') %>
fs.default.name=hdfs://<%= @hadoop_masters[0] %>:8020

# Accumulo specific
bigtable.accumulo.instanceName=lumify
bigtable.accumulo.zookeeperServerNames=<%= @zookeeper_nodes.values.collect {|node| node.split(':')[0]}.join(',') %>
bigtable.accumulo.username=root
bigtable.accumulo.password=password

# graph
graph=com.altamiracorp.securegraph.accumulo.AccumuloGraph
# TODO when server side element visibility is fix remove this line
graph.useServerSideElementVisibilityRowFilter=false
graph.accumuloInstanceName=lumify
graph.username=root
graph.password=password
graph.tableName=atc_securegraph
graph.zookeeperServers=<%= @zookeeper_nodes.values.collect {|node| node.split(':')[0]}.join(',') %>
graph.serializer=com.altamiracorp.securegraph.accumulo.serializer.JavaValueSerializer
graph.idgenerator=com.altamiracorp.securegraph.id.UUIDIdGenerator
graph.search=com.altamiracorp.securegraph.elasticsearch.ElasticSearchSearchIndex
graph.search.locations=<%= @hadoop_slaves[0] %>
graph.search.indexName=securegraph

# Object-detection
objectdetection.classifierConcepts=face
objectdetection.classifier.face.path=hdfs:///lumify/config/opencv/haarcascade_frontalface_alt.xml

# Term extraction
termextraction.opennlp.pathPrefix=/lumify/config/opennlp/
termextraction.knownEntities.pathPrefix=/lumify/config/knownEntities/

# CLAVIN
clavin.disabled=<%= @clavin_index_dir ? 'false' : 'true' %>
clavin.indexDirectory=<%= @clavin_index_dir %>
