#Base properties for every workflow
nameNode=hdfs://<%= @hadoop_masters[0] %>:8020
hdfsRoot=hdfs://<%= @hadoop_masters[0] %>
jobTracker=<%= @hadoop_masters[0] %>:8021
queueName=default

jobRoot=oozie-jobs
workflowRoot=${jobRoot}/workflows
coordinatorRoot=${jobRoot}/coordinators
oozie.libpath=/user/${user.name}/oozie-libs

#helper property for when we might change the name of this thing
basePackage=com.altamiracorp.lumify

#Custom launcher for our Accumulo based MR jobs
launcherClass=${basePackage}.oozie.AccumuloMRMain

#Ontology you would like to run with
ontologyClass=${basePackage}.ontology.Dev

#File import related
fileImportReadyDir=/import/1-ready/
fullFileImportReadyDir=${hdfsRoot}${fileImportReadyDir}
fileImportProcessingDir=/import/2-processing/
fullFileImportProcessingDir=${hdfsRoot}${fileImportProcessingDir}
fileImportImportedDir=/import/3-imported/
fullFileImportImportedDir=${hdfsRoot}${fileImportImportedDir}

#GeoNames import related
geoNamesRoot=${hdfsRoot}/import/geoNames
placeNamesDir=${geoNamesRoot}/placeNames/
admin1CodesDir=${geoNamesRoot}/admin1/
countryInfoDir=${geoNamesRoot}/countryInfo/
postalCodesDir=${geoNamesRoot}/postalCodes/

tablePlaceNames=atc_GeoName
tableAdmin1Codes=atc_GeoNameAdmin1Code
tableCountryInfo=atc_GeoNameCountryInfo
tablePostalCodes=atc_GeoNamePostalCode


##### Accumulo Init Properties #####

#TermMention
tableTermMention=atc_TermMention
inputFormatTerm=${basePackage}.model.AccumuloTermMentionInputFormat

#VideoFrame
tableVideoFrame=atc_VideoFrame
inputFormatVideoFrame=${basePackage}.model.AccumuloVideoFrameInputFormat
