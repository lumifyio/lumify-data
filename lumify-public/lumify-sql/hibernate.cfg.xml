<?xml version="1.0" encoding="UTF-8"?>
        <!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="hibernate.connection.password">lumify</property>
        <property name="hibernate.connection.url">jdbc:mysql://192.168.33.10:3306/lumify</property>
        <property name="hibernate.connection.username">lumify</property>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
        <property name="connection.pool_size">1</property>
        <property name="show_sql">true</property>
        <property name="hbm2ddl.auto">update</property>
        <property name="hibernate.current_session_context_class">thread</property>
        <mapping class="com.altamiracorp.lumify.sql.model.user.SqlUser"/>
        <mapping class="com.altamiracorp.lumify.sql.model.workspace.SqlWorkspace"/>
        <mapping class="com.altamiracorp.lumify.sql.model.workspace.SqlWorkspaceUserId"/>
        <mapping class="com.altamiracorp.lumify.sql.model.workspace.SqlWorkspaceUser"/>
        <mapping class="com.altamiracorp.lumify.sql.model.workspace.SqlWorkspaceVertex"/>
        <mapping class="com.altamiracorp.lumify.sql.model.workspace.SqlWorkspaceVertexId"/>
        <mapping class="com.altamiracorp.lumify.sql.model.workspace.SqlVertex"/>
    </session-factory>
</hibernate-configuration>