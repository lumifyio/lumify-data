
<div class="detail-toolbar">
  <div class="btn-toolbar">

    <div class="btn-group">
      <a class="btn btn-small dropdown-toggle" href="#" data-toggle="dropdown"><i class="icon-share"></i>
        <span class="caret"></span>
      </a>
      <ul class="dropdown-menu">
        <li><a class="" href="<%= vertex.imageRawSrc %>" target="_blank"><%= i18n('detail.artifact.open.button', vertex.concept.displayType) %></a></li>
        <li><a class="" href="<%= vertex.imageRawSrc %><%= /\?/.test(vertex.imageRawSrc) ? '&' : '?' %>download=true" target="_blank"><%= i18n('detail.artifact.download.button', vertex.concept.displayType) %></a></li>
        <% var sourceUrl = _.findWhere(vertex.properties, { name: 'http://lumify.io#sourceUrl' }); %>
        <% if (sourceUrl) { %>
          <li><a target="_blank" class="" href="<%= sourceUrl.value %>"><%= i18n('detail.entity.source_url.button') %></a></li>
        <% } %>
      </ul>
    </div>

    <%- fullscreenButton %>

    <%- auditsButton %>
  </div>
</div>

<h1 class="generic-draggable artifact-title" 
  data-vertex-id='<%= vertex.id %>'><%= F.vertex.title(vertex) %><div class="subtitle"><%= vertex.concept.displayName %></div></h1>

<% if(vertex.concept.displayType == 'video') { %>
  <div class="preview"/>
  <div class="currentTranscript"></div>
<% } %>
<% if(vertex.concept.displayType == 'image') { %>
  <div class="image-preview opens-dropdown"></div>
<% } %>
<% if(vertex.concept.displayType == 'audio') { %>
  <div class="audio-preview"></div>
  <div class="currentTranscript"></div>
<% } %>

<div class='detected-object-labels'><%
  (detectedObjects).forEach(function(property) {
      var value = property.value,
          conceptType = value.concept,
          title = value.edgeId ? 'resolved person' : 'person', // TODO: replace with conceptDisplayName
          classes = value.edgeId ? 'resolved entity' : ''; %>
      <span class="detected-object-tag">
          <a class="<%= classes %> label label-info detected-object opens-dropdown" data-info="<%= JSON.stringify(value) %>" href="#"><%= title %></a>
      </span>
  <% }); %></div>

<div class="artifact-header">
  <div class="properties"></div>
</div>

<div class="texts"></div>
