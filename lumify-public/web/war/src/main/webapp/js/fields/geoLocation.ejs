
<table cellpadding="0">

  <% if (!predicates || hasGeocoder) { %>
  <tr class="input-prepend">
    <td class="predicate-row">
      <span class="add-on">Description</span>
    </td>

    <td class="input-row">
      <input data-optional="true" class="description" type="text" value="<%= value && value.description || '' %>" />
    </td>
  </tr>
  <% } %>

  <tr class="input-prepend">
    <td class="predicate-row">
      <span class="add-on">Latitude</span>
    </td>

    <td class="input-row">
      <input class="lat" type="text" value="<%= value && value.latitude || '' %>" />
    </td>
  </tr>

  <tr class="input-prepend">
    <td class="predicate-row">
      <span class="add-on">Longitude</span>
    </td>

    <td class="input-row">
      <input class="lon" type="text" value="<%= value && value.longitude || '' %>"></input>
    </td>
  </tr>

  <% if (predicates) { %>
  <tr class="input-prepend">
    <td class="predicate-row">
      <span class="add-on">Radius</span>
    </td>

    <td class="input-row">
      <input class="radius" placeholder="km" type="text"></input>
    </td>
  </tr>
  <% } %>

</table>

