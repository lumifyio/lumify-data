<ol class="audit-list">
  <% if (audits.length) { %>
  <% audits.forEach(function(audit, i) { %>
      <% var shouldHide = i >= MAX_TO_DISPLAY; %>
      <% include detail/audit-item %>
    <% }); %>
    <% if (audits.length > MAX_TO_DISPLAY) { %>
    <li class="show-all-button-row"><button class="btn btn-link btn-small">Show all...</button></li>
    <% } %>
  <% } else { %>
    <li>No audit events</li>
  <% } %>
</ol>
