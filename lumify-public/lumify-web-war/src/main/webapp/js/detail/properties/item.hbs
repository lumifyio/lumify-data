<tr class="property property-{{cls}} {{#if hidden}}hidden{{/if}}">

  <td class="property-name">{{#unless isRepeated}}<strong>{{displayName}}</strong>{{/unless}}</td>

  <td class="property-value" colspan="2">

    {{#if isVisibility}}
        {{> detail/properties/types/visibility }}
        <button data-property="{{json}}" class="info"></button>
    {{else}}
      {{#if justification}}
          {{> detail/properties/types/justification }}
      {{else}}
        {{#if geoLocation}}
          {{> detail/properties/types/geoLocation }}
        {{else}}
          {{stringValue}}
        {{/if}}
        <button data-property="{{json}}" class="info"></button>
        {{#unless hideVisibility}}
        <span class="visibility" data-visibility="{{visibilityJson}}"></span>
        {{/unless}}
      {{/if}}
    {{/if}}

  </td>
</tr>

{{#if hiddenNumber}}
  <tr class="show-more">
    <td class="property-name">&nbsp;</td>
    <td class="property-value" colspan="2">
      <button class="btn btn-link btn-small">Show {{hiddenNumber}} more&hellip;</button>
    </td>
  </tr>
{{/if}}
