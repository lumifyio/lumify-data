<!-- For Firefox blurring -->
<svg version="1.1" xmlns="http://www.w3.org/2000/svg">
  <filter id="<%= prefix %>-blur">
    <feGaussianBlur stdDeviation="9" />
  </filter>


  <mask id="<%= prefix %>-mask" maskUnits="objectBoundingBox" maskContentUnits="objectBoundingBox">
    <radialGradient id="<%= prefix %>-gradient" cx="0.5" cy="0.5" r="0.1">
      <stop offset="0" stop-color="transparent"/>
      <stop offset="1" stop-color="white"/>
    </radialGradient>
    <rect x="0" y="0" width="1" height="1" fill="url(#<%= prefix %>-gradient)"/>
  </mask>
</svg>
