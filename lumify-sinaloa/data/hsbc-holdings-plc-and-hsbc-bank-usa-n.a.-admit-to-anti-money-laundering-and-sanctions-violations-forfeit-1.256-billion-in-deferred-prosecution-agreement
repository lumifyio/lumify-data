    jq('head').append(e);
  }());
  </script>

  <script type="text/javascript">
jq(function(){
try{
jq.ajax({
    url : 'http://urls.api.twitter.com/1/urls/count.json?url=http://www.fbi.gov/washingtondc/press-releases/2012/hsbc-holdings-plc-and-hsbc-bank-usa-n.a.-admit-to-anti-money-laundering-and-sanctions-violations-forfeit-1.256-billion-in-deferred-prosecution-agreement',
    dataType : 'jsonp',
    success : function(data){
        count = data['count'];
        if(count > 0){
            jq('li.twitter-share-button a span').
                html('(' + addCommas(count) + ')');
            jq('li.twitter-share-button a span').fadeIn();
        }
    }
});
}catch(ex){
    //do nothing..
}
});</script>




