<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>com.altamiracorp.reddawn</groupId>
    <artifactId>reddawn</artifactId>
    <packaging>pom</packaging>

    <version>1.0-SNAPSHOT</version>

    <name>Red Dawn</name>

    <modules>
        <module>core</module>
        <module>web</module>
        <module>messaging</module>
        <module>web-framework</module>
        <module>model</module>
        <module>model-accumulo</module>
        <module>dictionary-seed</module>
    </modules>

    <repositories>
        <repository>
            <id>com.cloudera</id>
            <url>https://repository.cloudera.com/content/repositories/releases/</url>
        </repository>
		<repository>
			<id>red-dawn-releases</id>
			<url>http://nic-mvnproxy:8080/artifactory/libs-release/</url>
		</repository>
		<repository>
			<snapshots>
				<enabled>true</enabled>
				<updatePolicy>never</updatePolicy>
				<checksumPolicy>fail</checksumPolicy>
			</snapshots>
			<id>red-dawn-snapshots</id>
			<url>http://nic-mvnproxy:8080/artifactory/libs-release/</url>
		</repository>
    </repositories>

	<properties>
		<blur-version>0.1.5</blur-version>
		<accumulo-version>1.4.3</accumulo-version>
		<hadoop-version>0.20.2-cdh3u6</hadoop-version>
		<zookeeper-version>3.3.5</zookeeper-version>
		<jetty-version>8.1.11.v20130520</jetty-version>
	</properties>

