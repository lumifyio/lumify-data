<!-- Common configurations for our MR jobs go here! -->
<configuration>
    <property>
        <name>zookeeperInstanceName</name>
        <value>reddawn</value>
    </property>
    <property>
        <name>zookeeperServerNames</name>
        <value><%= @zookeeper_nodes.values.join(',') %></value>
    </property>
    <property>
        <name>username</name>
        <value>root</value>
    </property>
    <property>
        <name>password</name>
        <value>password</value>
    </property>
    <property>
        <name>hadoopUrl</name>
        <value>hdfs://<%= @hadoop_masters[0] %>:8020</value>
    </property>
    <property>
        <name>blurControllerLocation</name>
        <value><%= @hadoop_masters[0] %>:40010</value>
    </property>
    <property>
        <name>blurPath</name>
        <value>hdfs://<%= @hadoop_masters[0] %>:8020/blur</value>
    </property>
	  <property>
        <name>mapreduce.outputformat.class</name>
        <value>com.altamiracorp.reddawn.model.AccumuloModelOutputFormat</value>
    </property>
	  <property>
        <name>mapred.reduce.tasks</name>
        <value>0</value>
    </property>
</configuration>
