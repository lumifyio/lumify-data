 <coordinator-app name="PeriodicEntityHighlight" 
		 frequency="${coord:minutes(5)}"
                 start="${startTime}" 
		 end="${endTime}" 
		 timezone="UTC"
                 xmlns="uri:oozie:coordinator:0.1">
        <action>
                <workflow>
                        <app-path>${nameNode}/user/${coord:user()}/${workflowRoot}/map-reduce/artifact-highlighting</app-path>
						<configuration>
							<property>
								<name>TIMESTAMP_START_TIME</name>
							    <value>${coord:formatTime(coord:dateOffset(coord:nominalTime(), -5, 'MINUTE'),'yyyyMMddHHmmssz')}</value>
							</property>
						</configuration>
                </workflow>
        </action>     
</coordinator-app>