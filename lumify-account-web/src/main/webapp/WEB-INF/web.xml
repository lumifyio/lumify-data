<web-app xmlns="http://java.sun.com/xml/ns/javaee" version="3.0">
    <context-param>
        <param-name>AuthenticationProvider</param-name>
        <param-value>io.lumify.account.security.SessionAuthenticationProvider</param-value>
    </context-param>
    <context-param>
        <param-name>UserRepository</param-name>
        <param-value>io.lumify.account.security.UserRepository</param-value>
    </context-param>
    <context-param>
        <param-name>ModelSession</param-name>
        <param-value>com.altamiracorp.bigtable.model.accumulo.AccumuloSession</param-value>
    </context-param>

    <listener>
        <listener-class>io.lumify.account.ApplicationBootstrap</listener-class>
    </listener>

    <servlet>
        <servlet-name>account</servlet-name>
        <servlet-class>io.lumify.account.Router</servlet-class>
        <init-param>
            <param-name>env</param-name>
            <param-value>dev</param-value>
        </init-param>
        <async-supported>true</async-supported>
    </servlet>
    <servlet-mapping>
        <servlet-name>account</servlet-name>
        <url-pattern>/*</url-pattern>
    </servlet-mapping>
</web-app>
