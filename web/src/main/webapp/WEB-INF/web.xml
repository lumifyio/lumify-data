<web-app xmlns="http://java.sun.com/xml/ns/javaee" version="2.5">
    <context-param>
        <param-name>application.configPath</param-name>
        <param-value>file:///opt/reddawn/config/configuration.properties</param-value>
    </context-param>    

    <listener>
        <listener-class>com.altamiracorp.reddawn.web.ApplicationBootstrap</listener-class>
    </listener>
    
    <servlet>
        <servlet-name>red-dawn</servlet-name>
        <servlet-class>com.altamiracorp.reddawn.web.Router</servlet-class>
        <init-param>
            <param-name>env</param-name>
            <param-value>dev</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>red-dawn</servlet-name>
        <url-pattern>/*</url-pattern>
    </servlet-mapping>
</web-app>