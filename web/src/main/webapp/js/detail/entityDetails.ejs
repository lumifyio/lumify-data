<div class="btn-toolbar">
  <%- styleHtml %>
</div>

<h2><%= key.sign %></h2>

<h3>Mentions</h3>
<ul>
<% mentions.forEach(function(termMention) { %>
    <li>
        <a class="mention-artifact artifact" href="artifact/<%= termMention.artifactKey %>"
                    data-row-key="<%= termMention.artifactKey %>"
                    data-info="<%= JSON.stringify({
                        'rowKey': termMention.artifactKey,
                        'type': 'artifact',
                        'subType': (termMention['atc:artifactType'] || '').toLowerCase(),
                        'title': termMention['atc:artifactSubject'] || 'No title Available'
                    })%>">
            <h4><%= termMention['atc:artifactSubject'] %></h4>
        </a>
        <p>
            <%- termMention.highlightedSentenceText %>
        </p>
    </li>
<% }); %>
</ul>
<% if(offset >= limit && offset > 0) { %>
    <a href="entity/<%= key.value %>/<%= parseInt(offset) - parseInt(limit) %>/<%= limit %>" class="mention-request" data-key="<%= JSON.stringify(key) %>" data-relationships="<%= JSON.stringify(relationships) %>"> Previous </a>
<% }
if(limit == mentions.length) { %>
<a href="entity/<%= key.value %>/<%= parseInt(offset) + parseInt(limit) %>/<%= limit %>" class="mention-request" data-key="<%= JSON.stringify(key) %>" data-relationships="<%= JSON.stringify(relationships) %>"> Next </a>
<% } %>

<h3>Relationships</h3>
<ul>
<% relationships.forEach(function(relationship) { %>
    <li>
        <span
            class="entity <%= relationship.subjectRowKey.conceptLabel %>"
            data-info="<%= JSON.stringify({
              'rowKey': relationship.subjectRowKey.value,
              'type': 'entity',
              'subType': relationship.subjectRowKey.conceptLabel
            }) %>"><%= relationship.subjectRowKey.sign %>
        </span>
        <%= relationship.predicateLabel.predicateLabel %>
        <span
            class="entity <%= relationship.objectRowKey.conceptLabel %>"
            data-info="<%= JSON.stringify({
              'rowKey': relationship.objectRowKey.value,
              'type': 'entity',
              'subType': relationship.objectRowKey.conceptLabel
            }) %>"><%= relationship.objectRowKey.sign %>
        </span>
    </li>
<% }) %>
</ul>