
<div class="btn-toolbar">
  <%- highlightButton %>

  <div class="btn-group">
    <a class="btn btn-small" href="<%= artifact.rawUrl %>" target="_blank">View</a>
    <a class="btn btn-small" href="<%= artifact.rawUrl %>?download=true" target="_blank">Download</a>
  </div>
</div>

<h2 class="generic-draggable" data-info='<%= artifact.dataInfo %>'><%= artifact.Generic_Metadata.subject || 'No title available' %></h2>
<% if(artifact.Dynamic_Metadata && artifact.Dynamic_Metadata.latitude) { %>
    <b>Location:</b>
    <a href="#" class="map-coordinates" latitude="<%= artifact.Dynamic_Metadata.latitude %>" longitude="<%= artifact.Dynamic_Metadata.longitude %>">
        <%= artifact.Dynamic_Metadata.latitude %>, <%= artifact.Dynamic_Metadata.longitude %>
    </a>
    <br/>
<% } %>

<% if(artifact.type == 'video') { %>
  <div class="preview"/>
<% } %>
<% if(artifact.type == 'image') { %>
  <div class="image-preview" style="background-image:url(<%= artifact.rawUrl %>);">
    <img src='<%= artifact.rawUrl %>' width="auto" height="300"/>
  </div>
<% } %>

<% if(artifact['atc:Artifact_Detected_Objects']) { %>
  <% artifact['atc:Artifact_Detected_Objects'].detectedObjects.forEach(function(object) { %>
  <a class="label label-info detected-object" data-info="<%= JSON.stringify(object) %>" href="#"><%= object.concept %></a>
  <% }); %>
<% } %>

<div class="text"><%- artifact.contentHtml %></div>
