
<div class="btn-toolbar">

  <%- highlightButton %>

  <div class="btn-group">
    <a class="btn btn-small dropdown-toggle" href="#" data-toggle="dropdown"><i class="icon-share"></i>
      <span class="caret"></span>
    </a>
    <ul class="dropdown-menu">
      <li><a class="" href="<%= artifact.rawUrl %>" target="_blank">Open <%= artifact.Generic_Metadata.file_extension %> <%= artifact.type %></a></li>
      <li><a class="" href="<%= artifact.rawUrl %>?download=true" target="_blank">Download <%= artifact.Generic_Metadata.file_extension %> <%= artifact.type %></a></li>
    </ul>
  </div>

  <a class="btn btn-small" target="_blank" href="/#v=<%= artifact.Generic_Metadata['atc:graph_vertex_id'] %>" ><i class="icon-fullscreen"></i></a>

</div>

<h1 class="generic-draggable" data-info='<%= artifact.dataInfo %>'><%= artifact.Generic_Metadata.subject || 'No title available' %></h1>
<% if(artifact.Dynamic_Metadata && artifact.Dynamic_Metadata['atc:geoLocationTitle'] && artifact.Dynamic_Metadata.latitude && artifact.Dynamic_Metadata.longitude) { %>
    <div class="location">
        <b>Location:</b>
        <a href="#" class="map-coordinates" latitude="<%= artifact.Dynamic_Metadata.latitude %>" longitude="<%= artifact.Dynamic_Metadata.longitude %>">
            <%= artifact.Dynamic_Metadata['atc:geoLocationTitle'] %>
        </a>
    </div>
<% } %>
<div class="source">
    <b>Source: </b><%= artifact.source || 'Unknown' %>
</div>

<% if(artifact.type == 'video') { %>
  <div class="preview"/>
<% } %>
<% if(artifact.type == 'image') { %>
  <div class="image-preview" style="background-image:url(<%= artifact.rawUrl %>);">
    <img src='<%= artifact.rawUrl %>' width="auto" height="300"/>
  </div>
<% } %>

<% if(artifact['atc:Artifact_Detected_Objects']) { %>
  <% artifact['atc:Artifact_Detected_Objects'].detectedObjects.forEach(function(object) { %>
  <a class="label label-info detected-object" data-info="<%= JSON.stringify(object) %>" href="#"><%= object.concept %></a>
  <% }); %>
<% } %>

<div class="text"><%- artifact.contentHtml %></div>
