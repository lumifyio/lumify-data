<div class="btn-toolbar">
  <div class="btn-group">
    <a class="btn btn-small dropdown-toggle" data-toggle="dropdown" href="#">
      Highlight
      <span class="caret"></span>
    </a>
    <ul class="highlight-options dropdown-menu">
      <% styles.forEach(function(style, i) { %>
      <li class="<%= i === activeStyle ? 'checked' : '' %>" data-cls="<%= style.cls || '' %>"><a href="#"><%= style.name %></a></li>
      <% }); %>
    </ul>
  </div>

  <div class="btn-group">
    <a class="btn btn-small" href="<%= artifact.rawUrl %>" target="_blank">View</a>
    <a class="btn btn-small" href="<%= artifact.rawUrl %>?download=true" target="_blank">Download</a>
  </div>
</div>

<h2><%= artifact.Generic_Metadata.subject %></h2>
<% if(artifact.Dynamic_Metadata && artifact.Dynamic_Metadata.latitude) { %>
    <b>Location:</b>
    <a class="map-coordinates" latitude="<%= artifact.Dynamic_Metadata.latitude %>" longitude="<%= artifact.Dynamic_Metadata.longitude %>">
        <%= artifact.Dynamic_Metadata.latitude %>, <%= artifact.Dynamic_Metadata.longitude %>
    </a>
    <br/>
<% } %>

<% if(artifact.type == 'video') { %>
    <video width="320" height="240" controls>
      <source src="<%= artifact.rawUrl %>?playback=true" type="video/mp4">
      Your browser does not support the video tag.
    </video>
<% } %>

<div class="text"><%- artifact.contentHtml %></div>
